  body
    header
      .navbar.navbar-default.navbar-static-top
        .container
          .navbar-header
            a.navbar-brand login

    .container
      ul.list-unstyled
        li: a.btn.btn-info.btn-margin(href='/auth/twitter') twitter
        li: a.btn.btn-info.btn-margin(href='/auth/facebook') facebook
        li: a.btn.btn-info.btn-margin(href='/auth/google') google
        li: a.btn.btn-info.btn-margin(href='/auth/windowslive') windowslive
        li: a.btn.btn-info.btn-margin(href='/auth/github') github
    script(src='/components/Umi/dist/js/bootstrap.min.js', async)
