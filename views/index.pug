include ./mdl/switch.pug

doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='theme-color', content='#4DB6AC')
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/material-design-lite/1.2.1/material.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/css/map.css')
    link(rel='prefetch', href='/res/0/0.png')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js', defer)
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js', defer)
    script(src='https://cdnjs.cloudflare.com/ajax/libs/material-design-lite/1.2.1/material.min.js', defer)
    script(src='/components/Add-Clear/addclear.min.js', defer)
    title Location Overview
  body
    .mdl-layout.mdl-js-layout.layout-root.mdl-layout--fixed-header
      #search-bar.search-wrapper.mdl-layout__header: .additional-control.search-bar
          button.mdl-js-button.mdl-js-ripple-effect.mdl-layout__drawer-button
            i.material-icons menu
          form#search-form: input#place-search(placeholder='Search in locapos')
      .mdl-layout__drawer
        .nav-switch: +mdlSwitch('swMapMode', 'Night Mode')
        .nav-switch: +mdlSwitch('swTraffic', 'Traffic Layer')
        .nav-switch: +mdlSwitch('swWeather', 'Weather Layer')
      .mdl-layout__content
        #map-canvas: p "loading..."
    script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.4.6/socket.io.min.js', defer)
    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCdl30sDo_R0-BiwMJvhro9Az1VS1ISI0w&libraries=places', defer)
    script(src='https://cdn.sobekrepository.org/includes/gmaps-markerwithlabel/1.9.1/gmaps-markerwithlabel-1.9.1.min.js', defer)
    script(src='/js/app.js', defer)
